{
  "name": "KKFinder",
  "version": "1.0",
  "description": "An extension can find music in KKBOX!",
  "permissions": ["contextMenus", "activeTab", "storage", "https://*/", "http://*/"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/KKFinder16.png",
      "32": "images/KKFinder32.png",
      "48": "images/KKFinder48.png",
      "128": "images/KKFinder128.png"
    }
  },
  "icons": {
    "16": "images/KKFinder16.png",
    "32": "images/KKFinder32.png",
    "48": "images/KKFinder48.png",
    "128": "images/KKFinder128.png"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["contentScript.js"]
    }
  ]
}
